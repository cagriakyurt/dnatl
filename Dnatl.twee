<button onclick="importLogs()">Import Logs</button>
<button onclick="exportLogs()">Export Logs</button>
<button onclick="clearLogs()">Clear Logs</button>
<input type="file" id="importFile" accept=".json" style="display:none;" />

<script>
function exportLogs() {
  const logs = SugarCube.State.variables.archive || [];
  const logsJSON = JSON.stringify(logs, null, 2);
  const blob = new Blob([logsJSON], { type: "application/json" });
  const url = URL.createObjectURL(blob);
  const a = document.createElement("a");
  a.href = url;
  a.download = "gamelogs.json";
  document.body.appendChild(a);
  a.click();
  document.body.removeChild(a);
}

function importLogs() {
  document.getElementById("importFile").click();
}

document.getElementById("importFile").addEventListener("change", function(event) {
  const file = event.target.files[0];
  if (!file) return;
  const reader = new FileReader();
  reader.onload = function(e) {
    try {
      const importedData = JSON.parse(e.target.result);
      if (Array.isArray(importedData)) {
        SugarCube.State.variables.archive = importedData;
        localStorage.setItem("gameLogs", JSON.stringify(importedData));
        alert("Logs imported successfully!");
        SugarCube.Engine.play("Start");
      } else {
        alert("Invalid log data format.");
      }
    } catch (error) {
      alert("Error reading file: " + error.message);
    }
  };
  reader.readAsText(file);
});

function clearLogs() {
  const confirmDelete = prompt("To confirm deletion of ALL logs and reset the game, type: delete");
  if (confirmDelete && confirmDelete.trim().toLowerCase() === "delete") {
    localStorage.removeItem("gameLogs");
    SugarCube.State.reset();
    alert("All logs deleted. Game will restart now.");
    SugarCube.Engine.play("Start"); // Start pasajını yeniden yükle
  } else {
    alert("Logs not deleted.");
  }
}
</script>

