// Seçilen promptlar için global alan
window.selectedPrompts = [];

// 3 prompt seç
while (window.selectedPrompts.length < 3) {
  const index = Math.floor(Math.random() * window.prompts.length);
  if (!window.selectedPrompts.includes(window.prompts[index])) {
    window.selectedPrompts.push(window.prompts[index]);
  }
}

function saveLog() {
  const entry = document.getElementById("logEntry").value;
  const messageEl = document.getElementById("save-message");

  if (!entry.trim()) {
    messageEl.textContent = "Please write something before saving!";
    return;
  }

  const now = new Date().toLocaleString();
  const archive = SugarCube.State.variables.archive || [];

  // Yeni logu ekle
  archive.push({
    date: now,
    entry: entry
  });
  SugarCube.State.variables.archive = archive;

  // LocalStorage’a da kaydet
  localStorage.setItem("gameLogs", JSON.stringify(archive));

  messageEl.textContent = `Log saved as ${now}`;
}

// Typewriter efekti
function typewriterEffect(element, text, delay = 30, callback = null) {
  let i = 0;
  function type() {
    if (i < text.length) {
      element.innerHTML += text.charAt(i);
      i++;
      setTimeout(type, delay);
    } else if (callback) {
      callback();
    }
  }
  type();
}

function showNextPrompt(index = 0) {
  const container = document.getElementById("prompt-container");
  if (!container) return;

  if (index < window.selectedPrompts.length) {
    const p = document.createElement("p");
    container.appendChild(p);
    typewriterEffect(p, window.selectedPrompts[index], 30, () => {
      setTimeout(() => showNextPrompt(index + 1), 500);
    });
  }
}

showNextPrompt();
</script>

